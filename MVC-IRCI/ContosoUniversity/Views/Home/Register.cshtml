@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="card card-container" style="max-width:450px; margin-top:55px;">
        <p class="form-title">IRCI<a style="color: #00acff;font-size: 20px;font-weight: 100;"> Register</a></p>
        <p id="profile-name" class="profile-name-card"></p>
        <form class="form-signin" action="#" method="POST">
            <input type="text" id="keyword" name="Name" class="form-control" placeholder="Name" required autofocus>
            <input type="text" id="keyword" name="Affiliation" class="form-control" placeholder="Affiliation" required autofocus>
            <input type="text" id="keyword" name="Email" class="form-control" placeholder="Email" required autofocus>
            <input type="text" id="keyword" name="Password" class="form-control" placeholder="Password" required autofocus>
            <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit"><span class="glyphicon glyphicon-user"></span> Register</button>
        </form><!-- /form -->
    </div><!-- /card-container -->
</div><!-- /container -->